<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="355dp"
                android:src="@drawable/icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/selectIdProduct"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/link" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Стоймость:"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/priceTextMessege"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="0.00"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Примечание:"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/editTextMessege"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:ems="10"
                android:hint="Введите текст"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/sendMailButton"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:background="#2BAF94"
                android:text="Отправить"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:background="#2BAF94"
                android:onClick="onClick"
                android:text="Сделать снимок"
                android:textColor="#000000" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>