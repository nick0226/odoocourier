<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/selectIdProduct"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Стоймость:"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/priceTextMessege"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ems="10"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Примечание:"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/editTextMessege"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="Оставить заметку"
                android:inputType="textCapSentences"
                android:textSize="24sp" />

            <Button
                android:id="@+id/uploadXML"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_app"
                android:onClick="onClickSpinner"
                android:shadowColor="#A8A8A8"
                android:shadowDx="3"
                android:shadowDy="-5"
                android:shadowRadius="5"
                android:text="Загрузить XML"
                android:textColor="#000000"
                android:textSize="14dp"
                android:drawableLeft="@drawable/xml1_png"/>

            <Button
                android:id="@+id/button"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_app"
                android:onClick="onClick"
                android:shadowColor="#A8A8A8"
                android:shadowDx="3"
                android:shadowDy="-5"
                android:shadowRadius="5"
                android:text="Сделать снимок"
                android:textColor="#000000"
                android:textSize="14dp"
                android:drawableLeft="@drawable/camera1"/>

            <Button
                android:id="@+id/sendMailButton"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_app"
                android:shadowColor="#A8A8A8"
                android:shadowDx="3"
                android:shadowDy="-5"
                android:shadowRadius="5"
                android:text="Отправить"
                android:textColor="#000000"
                android:textSize="14dp"
                android:drawableLeft="@drawable/massange1"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>